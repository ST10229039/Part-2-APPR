@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">
    <h1 class="display-4 text-primary">Welcome to Gift Of The Givers</h1>
    <p class="lead">Africa's largest disaster response and humanitarian relief organization</p>
</div>

<!-- Statistics Cards -->
<div class="row mb-5">
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body text-center">
                <i class="fas fa-project-diagram fa-3x mb-3"></i>
                <h2>@ViewBag.Stats.TotalProjects</h2>
                <p class="card-text">Active Projects</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-success h-100">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                <h2>@ViewBag.Stats.ActiveIncidents</h2>
                <p class="card-text">Active Incidents</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-warning h-100">
            <div class="card-body text-center">
                <i class="fas fa-donate fa-3x mb-3"></i>
                <h2>@ViewBag.Stats.TotalDonations</h2>
                <p class="card-text">Total Donations</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h2>@ViewBag.Stats.ActiveVolunteers</h2>
                <p class="card-text">Active Volunteers</p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-circle text-danger fa-3x mb-3"></i>
                <h4 class="card-title">Report Incident</h4>
                <p class="card-text">Report a disaster or emergency situation in your area.</p>
                <a asp-controller="Incident" asp-action="Report" class="btn btn-danger">Report Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-gift text-success fa-3x mb-3"></i>
                <h4 class="card-title">Make a Donation</h4>
                <p class="card-text">Donate resources to support our relief efforts.</p>
                <a asp-controller="Donation" asp-action="Donate" class="btn btn-success">Donate Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-hands-helping text-info fa-3x mb-3"></i>
                <h4 class="card-title">Become a Volunteer</h4>
                <p class="card-text">Join our team and make a difference in your community.</p>
                <a asp-controller="Volunteer" asp-action="Register" class="btn btn-info">Volunteer Now</a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Incidents -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-warning">
                <h5 class="card-title mb-0">
                    <i class="fas fa-fire"></i> Recent Disaster Incidents
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> 
                    This section would display recent incidents from the database. 
                    Currently showing placeholder content.
                </div>
                <div class="list-group">
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">KZN Floods - Emergency Response</h6>
                            <small class="text-danger">High Severity</small>
                        </div>
                        <p class="mb-1">Severe flooding affecting multiple communities in KwaZulu-Natal</p>
                        <small>Reported: 2024-01-15 | Location: KwaZulu-Natal</small>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Western Cape Fire Relief</h6>
                            <small class="text-warning">Medium Severity</small>
                        </div>
                        <p class="mb-1">Wildfires affecting residential areas in Cape Town</p>
                        <small>Reported: 2024-01-10 | Location: Western Cape</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>