@model IEnumerable<GiftOfTheGivers.Models.DisasterIncident>
@{
    ViewData["Title"] = "Disaster Incidents";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-exclamation-triangle me-2 text-warning"></i>Active Disaster Incidents</h2>
    <a asp-action="Report" class="btn btn-danger">
        <i class="fas fa-plus me-2"></i>Report New Incident
    </a>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-warning stat-card">
            <div class="card-body text-center">
                <i class="fas fa-fire fa-2x mb-2"></i>
                <h3>@Model.Count(i => i.DisasterType == "Fire")</h3>
                <p class="mb-0">Fire Incidents</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-info stat-card">
            <div class="card-body text-center">
                <i class="fas fa-tint fa-2x mb-2"></i>
                <h3>@Model.Count(i => i.DisasterType == "Flood")</h3>
                <p class="mb-0">Flood Incidents</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-secondary stat-card">
            <div class="card-body text-center">
                <i class="fas fa-wind fa-2x mb-2"></i>
                <h3>@Model.Count(i => i.DisasterType == "Storm")</h3>
                <p class="mb-0">Storm Incidents</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-success stat-card">
            <div class="card-body text-center">
                <i class="fas fa-users fa-2x mb-2"></i>
                <h3>@Model.Sum(i => i.PeopleAffected)</h3>
                <p class="mb-0">People Affected</p>
            </div>
        </div>
    </div>
</div>

<!-- Incidents List -->
<div class="row">
    @foreach (var incident in Model)
    {
        <div class="col-lg-6 mb-4">
            <div class="card feature-card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@incident.Title</h5>
                    <span class="badge @GetSeverityBadgeClass(incident.Severity)">@incident.Severity</span>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="card-text">@incident.Description</p>
                    </div>
                    
                    <div class="row text-muted small mb-3">
                        <div class="col-6">
                            <i class="fas fa-map-marker-alt me-1"></i>
                            <strong>Location:</strong> @incident.Location
                        </div>
                        <div class="col-6">
                            <i class="fas fa-calendar me-1"></i>
                            <strong>Reported:</strong> @incident.ReportedDate.ToString("MMM dd, yyyy")
                        </div>
                    </div>
                    
                    <div class="row text-muted small mb-3">
                        <div class="col-6">
                            <i class="fas fa-users me-1"></i>
                            <strong>Affected:</strong> @incident.PeopleAffected people
                        </div>
                        <div class="col-6">
                            <i class="fas @GetDisasterIcon(incident.DisasterType) me-1"></i>
                            <strong>Type:</strong> @incident.DisasterType
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-light text-dark">
                            <i class="fas fa-user me-1"></i>Reported by: @incident.ReportedByUser?.Name
                        </span>
                        <a asp-action="Details" asp-route-id="@incident.IncidentID" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
        <h3>No Active Incidents</h3>
        <p class="text-muted">There are currently no active disaster incidents reported.</p>
        <a asp-action="Report" class="btn btn-primary">Report First Incident</a>
    </div>
}

@functions {
    public string GetSeverityBadgeClass(string severity)
    {
        return severity?.ToLower() switch
        {
            "critical" => "bg-danger",
            "high" => "bg-warning",
            "medium" => "bg-info",
            "low" => "bg-success",
            _ => "bg-secondary"
        };
    }

    public string GetDisasterIcon(string disasterType)
    {
        return disasterType?.ToLower() switch
        {
            "fire" => "fa-fire",
            "flood" => "fa-tint",
            "storm" => "fa-wind",
            "earthquake" => "fa-mountain",
            "drought" => "fa-sun",
            _ => "fa-exclamation-triangle"
        };
    }
}