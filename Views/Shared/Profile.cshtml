@model GiftOfTheGivers.Models.User
@{
    // This is a partial view that can be reused across different pages
}

<div class="card feature-card">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" 
                     style="width: 60px; height: 60px;">
                    <i class="fas fa-user fa-2x text-white"></i>
                </div>
            </div>
            <div class="col">
                <h6 class="mb-1 fw-bold">@Model.Name</h6>
                <p class="text-muted mb-1 small">@Model.Email</p>
                <div class="d-flex flex-wrap gap-1">
                    <span class="badge bg-primary small">
                        <i class="fas fa-user-tag me-1"></i>@Model.Role
                    </span>
                    @if (Model.DateCreated.Year > 2000)
                    {
                        <span class="badge bg-success small">
                            <i class="fas fa-calendar me-1"></i>@Model.DateCreated.ToString("MMM yyyy")
                        </span>
                    }
                </div>
            </div>
            <div class="col-auto">
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" 
                            data-bs-toggle="dropdown">
                        <i class="fas fa-cog"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                <i class="fas fa-user me-1"></i>View Profile
                            </a>
                        </li>
                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Donation" asp-action="Manage">
                                    <i class="fas fa-donate me-1"></i>Manage Donations
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Volunteer" asp-action="Manage">
                                    <i class="fas fa-users-cog me-1"></i>Manage Volunteers
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="Volunteer" asp-action="Profile">
                                    <i class="fas fa-id-card me-1"></i>Volunteer Profile
                                </a>
                            </li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats (Optional) -->
<div class="row mt-3">
    <div class="col-6">
        <div class="card bg-light feature-card">
            <div class="card-body text-center p-2">
                <h6 class="mb-0 text-primary">0</h6>
                <small class="text-muted">Donations</small>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card bg-light feature-card">
            <div class="card-body text-center p-2">
                <h6 class="mb-0 text-success">0</h6>
                <small class="text-muted">Volunteer Hours</small>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="card feature-card mt-3">
    <div class="card-header bg-light py-2">
        <h6 class="mb-0"><i class="fas fa-bolt me-1"></i>Quick Actions</h6>
    </div>
    <div class="card-body p-2">
        <div class="d-grid gap-2">
            <a asp-controller="Donation" asp-action="Donate" class="btn btn-sm btn-outline-success">
                <i class="fas fa-gift me-1"></i>Donate
            </a>
            <a asp-controller="Incident" asp-action="Report" class="btn btn-sm btn-outline-danger">
                <i class="fas fa-plus me-1"></i>Report Incident
            </a>
            @if (Context.Session.GetString("UserRole") != "Admin")
            {
                <a asp-controller="Volunteer" asp-action="Opportunities" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-search me-1"></i>Find Opportunities
                </a>
            }
        </div>
    </div>
</div>

<style>
    .card.feature-card {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
    }
    
    .card.feature-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .bg-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }
</style>