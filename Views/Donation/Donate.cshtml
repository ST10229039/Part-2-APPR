@model GiftOfTheGivers.Models.ResourceDonation
@{
    ViewData["Title"] = "Make a Donation";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card feature-card">
            <div class="card-header bg-success text-white text-center py-4">
                <h3 class="mb-0"><i class="fas fa-gift me-2"></i>Make a Difference</h3>
                <p class="mb-0 mt-2">Your donation can change lives</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="Donate" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DonorName" class="form-label">Full Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="DonorName" class="form-control" placeholder="Enter your full name">
                            </div>
                            <span asp-validation-for="DonorName" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="DonorEmail" class="form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="DonorEmail" type="email" class="form-control" placeholder="Enter your email">
                            </div>
                            <span asp-validation-for="DonorEmail" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ItemType" class="form-label">Donation Type</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-box"></i></span>
                                <select asp-for="ItemType" class="form-select">
                                    <option value="">Select donation type</option>
                                    <option value="Food">Food Supplies</option>
                                    <option value="Clothing">Clothing</option>
                                    <option value="Medical Supplies">Medical Supplies</option>
                                    <option value="Shelter">Shelter Materials</option>
                                    <option value="Hygiene">Hygiene Kits</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <span asp-validation-for="ItemType" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="ItemName" class="form-label">Item Description</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                <input asp-for="ItemName" class="form-control" placeholder="e.g., Canned goods, Blankets, etc.">
                            </div>
                            <span asp-validation-for="ItemName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Quantity" class="form-label">Quantity</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                                <input asp-for="Quantity" type="number" class="form-control" placeholder="Number of items" min="1">
                            </div>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="IncidentID" class="form-label">Target Relief Effort (Optional)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-crosshairs"></i></span>
                                <select asp-for="IncidentID" class="form-select">
                                    <option value="">General Donation</option>
                                    @if (ViewBag.ActiveIncidents != null)
                                    {
                                        foreach (var incident in ViewBag.ActiveIncidents)
                                        {
                                            <option value="@incident.IncidentID">@incident.Title - @incident.Location</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Additional Details</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-file-alt"></i></span>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Any additional information about your donation..."></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="PreferredDropoffLocation" class="form-label">Preferred Drop-off Location</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            <input asp-for="PreferredDropoffLocation" class="form-control" 
                                   placeholder="e.g., Durban Central Warehouse">
                        </div>
                        <span asp-validation-for="PreferredDropoffLocation" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Submit Donation
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Current Needs -->
        <div class="card mt-4 feature-card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>Current Most Needed Items</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success me-2"></i>Non-perishable food items</li>
                            <li><i class="fas fa-check text-success me-2"></i>Bottled water</li>
                            <li><i class="fas fa-check text-success me-2"></i>Blankets and warm clothing</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success me-2"></i>First aid kits</li>
                            <li><i class="fas fa-check text-success me-2"></i>Hygiene products</li>
                            <li><i class="fas fa-check text-success me-2"></i>Baby supplies</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            form.addEventListener('submit', function() {
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                    submitBtn.disabled = true;
                }
            });
        });
    </script>
}